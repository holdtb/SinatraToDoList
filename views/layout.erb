    <div class="navbar navbar-inverse navbar-fixed-top">
      <div class="navbar-inner">
        <div class="container">
          <a class="brand" href="/">Todo list</a>
        </div>
      </div>
    </div>

    <div class="container">
      <h1><%= @title %></h1>
      <%= yield %>
    </div>

    <script src="http://code.jquery.com/jquery-1.8.3.min.js"></script>
